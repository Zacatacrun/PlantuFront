extends layout

block content
 .container
   h1 Login
   p.lead
     | Sign in with your account. Don’t have one?
     a(href='signIn')  Register Now.
     form(role='form', action='/login', method='post')
       .form-group
         label(for='username') Nombre
         input.form-control(type='text', id='user', name='nombre', placeholder='ingrese su nombre de usuario o correo')
       .form-group
         label(for='password') Contraseña
         input.form-control(type='password', id='password', name='contrasena', placeholder='ingrese su contraseña')
       button.btn.btn-primary(type='submit') Subir
       &nbsp;
       a.btn.btn-default(role='button', href='/') Cancelar